#!/bin/sh
#
# Wrapper for the course tools.
#
# Requires:
#   - dmenu
#   - courseWizzard
#   - courseSelect

# Defaults.
archive="$HOME/Documents/masterWorkFolder/undergraduate/"
current="$HOME/Documents/currentCourse"

if [ "$1" = "" ] || [ "$1" = "-s" ]; then
  selection=$($HOME/repos/course/courseSelect $archive $current -l | dmenu -i)
  if [ $? -ne 0 ]; then
    exit
  fi
  $HOME/repos/course/courseSelect $archive $current $selection
fi

if [ "$1" = "-c" ]; then
  st -e $HOME/repos/course/courseWizard $archive
fi
